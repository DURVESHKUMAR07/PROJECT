<%- layout("/layouts/boilerplate") %>

<body>
    <br>
    <h2>Edit Listing</h2>
    <br>
    <form action="/listing/<%= list._id %>?_method=PUT" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" value="<%= list.title %>" class="form-control" required>
                    <div class="invalid-feedback">Enter <title></title></div>
                </div>
        
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control" required><%= list.description %></textarea>
                    <div class="invalid-feedback">Enter short description</div>
                </div>
        
                <div class="mb-3">
                    <label for="image" class="form-label">Image</label>
                    <input type="text" name="listing[image]" value="<%= list.image %>" class="form-control" required>
                    <div class="invalid-feedback">Enter image URL/Link</div>
                </div>

                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" name="listing[price]" value="<%= list.price %>" class="form-control" min="0" required>
                        <div class="invalid-feedback">Enter positive number</div>
                    </div>
            
                    <div class="mb-3 col-md-8">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" name="listing[location]" value="<%= list.location %>" class="form-control" required>
                        <div class="invalid-feedback">Enter location</div>
                    </div>
                </div>
        
                <div class="mb-3">
                    <label for="country" class="form-label">Country</label>
                    <input type="text" name="listing[country]" value="<%= list.country %>" class="form-control" required>
                    <div class="invalid-feedback">Enter country</div>
                </div>
        
                <button class="btn btn-primary mb-3">add</button>
    </form>
</body>

